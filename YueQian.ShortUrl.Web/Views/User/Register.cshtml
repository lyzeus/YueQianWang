@model YueQian.ShortUrl.Web.Models.UserRegisterModel
@{Layout = null;}
<!DOCTYPE html>
<html lang="zh">
<head>
    <title>跃迁网 - 分享短址，轻松赚钱</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="keywords" content="跃迁网,短地址,短址,跃迁短址">
    <meta name="description" content="跃迁网生成短址,轻松访问互联网">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/user/scripts/shorturl.register.js"></script>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        html, body { width: 100%; height: 100%; }
        body { background-color: #f2f3f7; padding: 0; margin: 0; }

        #logo, #registerbox { width: 386px; margin-left: auto; margin-right: auto; position: relative; }
        #logo { padding: 20px 0 20px 5px; }
            #logo img { margin: 0 auto; display: block; }
        #registerbox { background: #ffffff; box-shadow: 0 0 4px #000000; border-radius: 7px; overflow: hidden !important; text-align: center; position: relative; }

        .form-horizontal .control-group { border-top: 1px solid #ffffff; border-bottom: 1px solid #eeeeee; margin-bottom: 0; }
            .form-horizontal .control-group:last-child { border-bottom: 0; }
        .form-horizontal .control-label { padding-top: 15px; width: 120px; }
        .form-horizontal .controls { margin-left: 100px; padding: 10px 0; }
        .form-horizontal .form-actions { padding-left: 32px; padding-right: 40px; }
        .form-horizontal input[type=text], .form-horizontal input[type=password], .form-horizontal textarea { width: 210px; float: left; margin-bottom: 10px; }
        .form-horizontal .form-actions { margin-top: 0; margin-bottom: 0; }
        .error { color: #f00; float: right; margin-right: 40px; padding-bottom: 6px; }
        .foot { text-align: center; }
            .foot * { font-size: 14px; color: #666; }
            .foot a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div id="logo">
        <a title="跃迁网" href="/"><img src="~/Images/logo.png" alt="跃迁网" /></a>
    </div>
    <div id="registerbox">
        <form id="registerform" class="form-horizontal">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div class="control-group">
                <label class="control-label">邀请码：</label>
                <div class="controls">
                    <input type="text" id="InviteCode" name="InviteCode" value="@ViewBag.InviteCode" class="text" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">*用户名：</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "text" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">*输入密码：</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.Password, new { @class = "text" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">*确认密码：</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "text" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">*电子邮箱：</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Email, new { @class = "text" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">*验证码：</label>
                <div class="controls">
                    <img src="/VerifyCode" alt="验证码" id="vcode" style="float: left; height: 30px; margin-right: 10px;" />
                    <input type="text" name="VerifyCode" id="VerifyCode" value="" style="float: left; width: 50px;" maxlength="4" />
                </div>
            </div>
            <div class="form-actions">
                <a href="/User/Login" class="btn btn-default" style="float:left;">我要登录</a>
                <input type="submit" value="注册" class="btn btn-primary" style="float:right;" />
            </div>
        </form>
    </div>
    <div class="clear height30"></div>
    <div class="foot">
        <a href="/">首页</a>
        <a href="/About.html">关于我们</a>
        <a href="/FAQ.html">常见问题</a>
        <a href="/Contact.html">联系我们</a>
        <a href="/Privacy.html">隐私政策</a>
        <a href="/Terms.html">服务条件</a>
        <div class="clear height10"></div>
        <p class="center">©2012-@DateTime.Now.Year <a title="跃迁网" href="http://www.yqurl.com">跃迁网</a>  yqurl.com 版权所有</p>

    </div>
    <div class="clear height20"></div>
</body>
</html>


